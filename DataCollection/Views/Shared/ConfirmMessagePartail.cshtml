@{
    string buttonId = "btnFinalize", modificationButtonId = "btnModificationHod";
    
    if (DataCollection.ManageSession.SessionManager.UserWork == DataAccess.Enum.UserWork.HOD.ToString())
    {
        buttonId = "btnFinalizedByHod";
        modificationButtonId = "btnModificationHod";
    }
    else if (DataCollection.ManageSession.SessionManager.UserWork == DataAccess.Enum.UserWork.ADSRIC.ToString())
    {
        buttonId = "btnFinalizedByAssoDean";
        modificationButtonId = "btnModificationADean";
    }
    else if (DataCollection.ManageSession.SessionManager.UserWork == DataAccess.Enum.UserWork.DSRIC.ToString())
    {
        buttonId = "btnFinalizedByDean";
        modificationButtonId = "btnModificationDean";
    }
}


<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Confirm!</h4>
            </div>
            <div class="modal-body">
                <p>You are going to finalize the Data. You will not be able to Modify the Data further. It Will be sent to Next Level.</p>
            </div>
            <div class="modal-footer">                
                <button type="submit" id="@buttonId" class="btn btn-default" data-dismiss="modal">Ok</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="NeedModificationModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modification Note</h4>
            </div>
            <div class="modal-body">
                <textarea class="form-control" id="NeedModificationMSG" name="NeedModification" rows="5" cols="20" style="max-width:540px !important" placeholder="Modification Note"></textarea>
            </div>
            <div class="modal-footer">
                <button type="submit" id="@modificationButtonId" class="btn btn-default" data-dismiss="modal">Modification Needed</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ErrorAlertModel" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Error!</h4>
            </div>
            <div class="modal-body">
                <p>
                    <div class="alert alert-danger">
                        <strong><span id="alertMsgSpan"></span></strong>
                    </div>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>

    </div>
</div>